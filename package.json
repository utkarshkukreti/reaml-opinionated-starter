{
  "name": "reaml-opinionated-starter",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all build:tsc build:bsb -p start:bsb start:parcel start:tsc",
    "start:bsb": "bsb -make-world -w",
    "start:parcel": "parcel serve src/index.html src/Main.bs.js src/index.css",
    "start:tsc": "tsc -w --preserveWatchOutput",
    "build": "run-s build:tsc build:bsb build:parcel",
    "build:bsb": "bsb -make-world",
    "build:parcel": "rm -rf dist && PURGE=true parcel build --no-cache src/index.html src/Main.bs.js src/index.css",
    "build:tsc": "tsc",
    "clean": "rm -rf .parcel-cache dist && bsb -clean-world"
  },
  "dependencies": {
    "bs-abstract": "^0.18.0",
    "bs-webapi": "^0.15.6",
    "preact": "^10.3.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "reaml": "^0.7.2",
    "relude": "^0.53.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "autoprefixer": "^9.7.4",
    "bs-platform": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-nightly.83",
    "tailwindcss": "^1.2.0",
    "typescript": "^3.7.5"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  }
}
